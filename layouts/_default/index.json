{{- $.Scratch.Add "index" slice -}}
{{- range .Site.RegularPages -}}
  {{- if not .Params.nosearch -}}
    {{- $.Scratch.Add "index" (dict "title" .Title "href" .Permalink "tags" .Params.tags "section" .Section "content" (.Plain | truncate 200 "") "date" (.Date.Format "2006-01-02")) -}}
  {{- end -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}